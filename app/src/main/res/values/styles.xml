<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalcButton">
        <item name="android:fontFamily">@font/calc_font</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/calc_background_button</item>
        <item name="android:textSize">@dimen/keyButtonTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/buttonCornerRadius</item>
        <item name="android:height">@dimen/buttonHeight</item>
        <item name="android:layout_marginLeft">@dimen/buttonMargin</item>
        <item name="android:layout_marginRight">@dimen/buttonMargin</item>
        <item name="android:layout_marginTop">@dimen/buttonMargin</item>
        <item name="android:layout_marginBottom">@dimen/buttonMargin</item>
    </style>
    <style name="CalcButton.Night">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalcResultText">
        <item name="android:background">@color/calc_background_button</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalcResultText.Night">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>